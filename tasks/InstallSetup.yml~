---
- name: Download chefdk
  get_url: url={{ chefdk_url_deb }} dest={{ chefdk_tmp_dir }} 
  async: 20000
  poll: 10
  register: download
  ignore_errors: yes

- include: wget.yml
  when: download | failed
  
